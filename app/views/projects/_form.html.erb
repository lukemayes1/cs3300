<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> exist :</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <a style="font-family: 'Arial', monospace;"> <%= form.label :title %> </a>
    <%= form.text_field :title, :class => 'form-control' %>
  </div>

  <div class="field">
    <a style="font-family: 'Arial', monospace;"> <%= form.label :description %> </a>
    <%= form.text_area :description, :class => 'form-control' %>
  </div>

  <div class="container-fluid-nav text-center mt-4">
     <%= form.submit :class => 'btn btn-success' %>
  </div>
<% end %>